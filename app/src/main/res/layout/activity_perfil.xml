<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".perfil">

    <androidx.cardview.widget.CardView
        android:id="@+id/menu"
        android:layout_width="-300dp"
        android:layout_height="match_parent"

        android:backgroundTint="@color/background_component"

        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/menu_close_button"

                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_menu_24"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"

                android:background="@color/transparent"
                app:tint="@color/white"
                />

            <ImageView
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="16dp"
                android:background="@color/transparent"

                android:src="@drawable/notekeeper"
                app:layout_constraintLeft_toLeftOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                />

            <Button
                android:id="@+id/schedule"

                android:layout_width="match_parent"

                android:textAlignment="textStart"

                android:layout_height="45dp"

                android:text="· Agenda"
                android:textSize="18dp"

                android:textColor="@color/white"

                android:background="@color/transparent"
                />

            <Button
                android:id="@+id/share"

                android:layout_width="match_parent"

                android:textAlignment="textStart"

                android:layout_height="45dp"

                android:text="· Compartir"
                android:textSize="18dp"

                android:textColor="@color/white"

                android:background="@color/transparent"
                />

            <Button
                android:id="@+id/profile"

                android:layout_width="match_parent"

                android:textAlignment="textStart"

                android:layout_height="45dp"

                android:text="· Perfil"
                android:textSize="18dp"

                android:textColor="@color/white"

                android:background="@color/transparent"
                />

            <Button
                android:id="@+id/configuration"

                android:layout_width="match_parent"

                android:textAlignment="textStart"

                android:layout_height="45dp"

                android:text="· Configuració"
                android:textSize="18dp"

                android:textColor="@color/white"

                android:background="@color/transparent"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/baseline_menu_24"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/background_app"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/usuario"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_button" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuari"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_icon"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="usuari@exemple.com"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        android:layout_marginTop="4dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_card"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_email">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:id="@+id/editar_perfil"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Editar perfil"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="16dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/cambiar_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Canviar contrasenya"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/notificaciones"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notificacions"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="16dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/notificaciones_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cerrar_sesion"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:paddingVertical="12dp">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tancar sessió"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>